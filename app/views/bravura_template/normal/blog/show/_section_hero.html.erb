<section class="bg-secondary-50 py-12 sm:py-16 lg:py-20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="max-w-2xl mx-auto text-center">
			<nav class="flex items-center justify-center" aria-label="Breadcrumb">
				<%= link_to root_path, class: "flex items-center justify-center font-medium text-secondary-500 hover:text-secondary-700 sm:hidden", data: { umami_event: "Clicked Link: /", umami_href: "/" } do %>
					<svg class="h-5 w-5 flex-shrink-0 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M20 12H4M4 12L10 18M4 12L10 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
					</svg>
					Go to Home
				<% end %>
				<ol class="hidden items-center space-x-4 sm:flex list-none">
					<li>
						<div>
							<%= link_to root_path, class: "text-secondary-400 hover:text-secondary-600", data: { umami_event: "Clicked Link: /", umami_href: "/" } do %>
								<svg class="h-5 w-5 flex-shrink-0" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path
										d="M9 21V13.6C9 13.0399 9 12.7599 9.10899 12.546C9.20487 12.3578 9.35785 12.2049 9.54601 12.109C9.75992 12 10.0399 12 10.6 12H13.4C13.9601 12 14.2401 12 14.454 12.109C14.6422 12.2049 14.7951 12.3578 14.891 12.546C15 12.7599 15 13.0399 15 13.6V21M11.0177 2.764L4.23539 8.03912C3.78202 8.39175 3.55534 8.56806 3.39203 8.78886C3.24737 8.98444 3.1396 9.20478 3.07403 9.43905C3 9.70352 3 9.9907 3 10.5651V17.8C3 18.9201 3 19.4801 3.21799 19.908C3.40973 20.2843 3.71569 20.5903 4.09202 20.782C4.51984 21 5.07989 21 6.2 21H17.8C18.9201 21 19.4802 21 19.908 20.782C20.2843 20.5903 20.5903 20.2843 20.782 19.908C21 19.4801 21 18.9201 21 17.8V10.5651C21 9.9907 21 9.70352 20.926 9.43905C20.8604 9.20478 20.7526 8.98444 20.608 8.78886C20.4447 8.56806 20.218 8.39175 19.7646 8.03913L12.9823 2.764C12.631 2.49075 12.4553 2.35412 12.2613 2.3016C12.0902 2.25526 11.9098 2.25526 11.7387 2.3016C11.5447 2.35412 11.369 2.49075 11.0177 2.764Z"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									></path>
								</svg>
								<span class="sr-only">Home</span>
							<% end %>
						</div>
					</li>
					<li>
						<div class="flex items-center">
							<svg class="h-5 w-5 flex-shrink-0 text-secondary-400" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
							</svg>
							<%= link_to "Posts", root_path, class: "truncate text-sm font-medium text-secondary-500 ml-4 text-left hover:text-secondary-700", data: { umami_event: "Clicked Link: /", umami_href: "/" } %>
						</div>
					</li>
					<li>
						<div class="flex items-center">
							<svg class="h-5 w-5 flex-shrink-0 text-secondary-400" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
							</svg>
							<%= link_to @article.title, blog_path(@article), class: "truncate text-sm font-medium text-secondary-500 ml-4 text-left hover:text-secondary-700", data: { umami_event: "Clicked Link: #{blog_path(@article)}", umami_href: "#{blog_path(@article)}" } %>
						</div>
					</li>
				</ol>
			</nav>
			<h1 class="current-post-title text-3xl font-bold tracking-tight text-secondary-900 mt-8 sm:text-4xl lg:text-5xl"><%= @article.title %></h1>
			<p class="current-post-excerpt text-base font-medium text-secondary-500 mt-6 sm:text-lg lg:text-xl"><%= @article.excerpt %>
			</p>
			<div class="flex flex-wrap items-center justify-center gap-3 mt-8">
				<div class="text-sm font-medium">
					<div class="current-post-author flex items-center">
						<div class="flex-shrink-0">
							<%= link_to author_path(@article.author), class: "", data: { umami_event: "Clicked Link: #{author_path(@article.author)}", umami_href: author_path(@article.author) } do %>
								<span class="sr-only"><%= @article.author.name %></span>
								<% if @article.author.avatar.attached? %>
									<%= image_tag @author.avatar, alt: @article.author.name, class: "h-8 w-8 mr-2 rounded-full" %>
								<% else %>
									<%= image_tag "default_avatar.jpg", alt: @article.author.name, class: "h-8 w-8 mr-2 rounded-full" %>
								<% end %>
							<% end %>
						</div>
						<div>
							<p class="text-sm font-semibold text-secondary-900">
								<%= link_to @article.author.name, author_path(@article.author), class: "", data: { umami_event: "Clicked Link: #{author_path(@article.author)}", umami_href: author_path(@article.author) } %>
							</p>
						</div>
					</div>
				</div>
				<p class="text-sm font-medium text-secondary-300">•</p>
				<p class="current-post-publish-date text-sm font-medium text-secondary-500">
					<time datetime="2023-07-03">
						<%= @article.published_at&.strftime("%b %d, %Y") %>
					</time>
				</p>
				<p class="text-sm font-medium text-secondary-300">•</p>
				<div class="current-post-tags flex items-center justify-center space-x-2">
				<% @article.tag_list.each do |tag| %>
					<%= link_to tag, blog_category_path(tag),
							class: "inline-flex items-center bg-secondary-100 text-xs font-bold text-secondary-500 transition-all duration-200 rounded-full px-2.5 py-0.5 hover:bg-secondary-200 hover:text-secondary-900",
							data: { umami_event: "Clicked Link: #{blog_category_path(tag)}", umami_href: "#{blog_category_path(tag)}" } %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="current-post-cover bg-white mt-12 sm:mt-16 lg:mt-20">
		<div class="relative">
			<div class="absolute h-1/3 bg-secondary-50 inset-0"></div>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="article-cover-wrapper relative">
					<div class="absolute rotate-180 opacity-30 blur-lg bg-conic-gradient -inset-1" style="filter:blur(16px)"></div>
					<div class="article-cover aspect-w-16 aspect-h-8 relative overflow-hidden rounded-lg">
						<%= image_tag url_for(@article.cover), alt: @article.title, class: "h-full w-full object-cover" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
